<%# locals: () -%>

<main>
    <div class="container">
        <div class="card-details-container card-api-keys card-details-api-keys">
            <div class="card card-details">

            <div class="card-title">
                <%= svg_icon_tag 'profile' %>
                <h2>Api Keys</h2>
            </div>

            <% if can?(:create, ApiKey) %>
                <%= render "components/buttons/button_primary_create", text: "new api key", path: new_api_key_path, aria_label: "Add a new api key" %>
            <% end %>

            </div>

            <div class="divider"></div>
        </div>
        <div class="card card-api-key card-content">
            <div class="card-content-api-keys">
            <%= render(@api_keys) || "No API keys" %>
            </div>
        </div>
    </div>
</main>