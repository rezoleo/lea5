<%# locals: () %>

<% provide :button_text, "Create" %>

<h1>Add a new article</h1>

<%= form_with(model: @article, class: 'form') do |f| %>
  <%= render 'utils/error_messages', object: f.object %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, required: true %>
  </div>
  <div>
    <%= f.label :price, "Price (â‚¬)" %>
    <%= f.number_field :price, min: 0, step: 0.01, required: true, placeholder: "0.00" %>
  </div>
  <div>
    <%= f.submit yield(:button_text) %>
  </div>
<% end %>
