<%# locals: (payment_method:) %>

<div class="payment_method">
  <span><%= payment_method.name %></span>
  <span><%= payment_method.auto_verify.to_s %></span>
  <% if can?(:destroy, payment_method) %>
    <%= button_to(payment_method, method: :delete, data: { turbo_confirm: "Are you sure ?" }, 'aria-label': 'Delete this payment method') do %>
      <%= svg_icon_tag 'icon_delete' %>
    <% end %>
  <% end %>
</div>