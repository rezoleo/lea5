<%# locals: (user:) -%>

<%= form_with(model: user, class: 'form') do |f| %>
  <%= render 'utils/error_messages', object: f.object %>
  <div>
    <%= f.label :firstname %>
    <%= f.text_field :firstname, required: true %>
  </div>
  <div>
    <%= f.label :lastname %>
    <%= f.text_field :lastname, required: true %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email, required: true %>
  </div>
  <div>
    <%= f.label :room %>
    <%= f.text_field :room, required: true, placeholder: 'A123b or DF1', minlength: 3, maxlength: 5,
                     pattern: '([A-Fa-f][0-3][0-9]{2}[a-b]?|[Dd][Ff][1-4])' %>
  </div>
  <div>
    <%= f.submit yield(:button_text) %>
  </div>
<% end %>
