<%= form_with(model: [@owner, @machine], local: true) do |f| %>
  <%= render 'utils/error_messages', object: f.object %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true %>
  <%= f.label :mac %>
  <%= f.text_field :mac, required: true %>
  <%= f.submit yield(:button_text) %>
<% end %>
