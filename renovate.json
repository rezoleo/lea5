{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "configMigration": true,
  "extends": [
    "config:best-practices"
  ],
  "dependencyDashboard": true,
  "prHourlyLimit": 3,
  "timezone": "Europe/Paris",
  "packageRules": [
    {
      "description": "Schedule RuboCop updates on Friday nights and group with all its plugins",
      "matchPackageNames": "rubocop**",
      "matchDatasources": ["rubygems"],
      "groupName": "rubocop packages",
      "schedule": ["* 21-23 * * 5"]
    },
    {
      "description": "Use a generic version tag for CodeQL, to automatically use the latest security queries; same thing for setup-ruby (override helpers:pinGitHubActionDigests)",
      "matchManagers": ["github-actions"],
      "matchPackageNames": ["github/codeql-action", "ruby/setup-ruby"],
      "pinDigests": false
    }
  ],
  "osvVulnerabilityAlerts": true
}
